<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@color/black2"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Thanh toán"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/white"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Cách thức thanh toán tiện lợi nhất"
            android:textSize="20sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/white"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/button_wallet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/icon_card2"
            android:text="Thêm thẻ ( thanh toán dễ dàng hơn với thẻ tín dụng )"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_________________________________________________________"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Giao dịch gần đây"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/white"
            android:layout_gravity="left"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_money"
            android:layout_gravity="center"
            android:layout_marginTop="60sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Không có hoạt động nào gần đây"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>